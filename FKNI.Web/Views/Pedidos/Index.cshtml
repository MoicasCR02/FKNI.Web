@model IEnumerable<FKNI.Application.DTOs.PedidosDTO>

@{
    ViewData["Title"] = "Pedidos";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Lista de Pedidos</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus-circle"></i> Crear nuevo pedido
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped shadow rounded">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Cliente</th>
                    <th>Método de Entrega</th>
                    <th>Fecha</th>
                    <th>Estado</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdPedido</td>
                        <td>@item.IdClienteNavigation?.NombreUsuario</td>
                        <td>@item.MetodoEntrega</td>
                        <td>@item.FechaPedido</td>
                        <td>@item.IdEstado</td>
                        <td class="text-center">
                            <div class="d-flex justify-content-center gap-2">
                                <a asp-action="Edit" asp-route-id="@item.IdPedido" class="btn btn-sm btn-outline-primary" title="Editar">
                                    <i class="fas fa-pen"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.IdPedido" class="btn btn-sm btn-outline-info" title="Detalles">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.IdPedido" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
