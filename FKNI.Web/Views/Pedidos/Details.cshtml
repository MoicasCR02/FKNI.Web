@model FKNI.Application.DTOs.PedidosDTO

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>PedidosDTO</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdPedido)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdPedido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaPedido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaPedido)
        </dd>
        <h1>Info del cliente</h1>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdClienteNavigation.NombreUsuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdClienteNavigation.NombreUsuario)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DireccionEnvio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DireccionEnvio)
        </dd>
        <h1>Detalle de productos</h1>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MetodoEntrega)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MetodoEntrega)
        </dd>
        <h1>Productos</h1>
        <div>
            <td>
                @foreach (var c in Model.DetallePedidoProducto)
                {
                    <h1>Producto</h1>
                    <li>@c.IdProductoNavigation.NombreProducto</li>
                    <h1>Precio</h1>
                    <li>@c.IdProductoNavigation.Precio</li>
                    <h1>Cantidad</h1>
                    <li>@c.Cantidad</li>
                    
                    @foreach (var r in Model.DetallePedido)
                    {
                        <h1>Subtotal</h1>
                        <li>@r.Subtotal</li>
                    }
                }
            </td>
        </div>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MetodoEntrega)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MetodoEntrega)
        </dd>

    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>
</div>
