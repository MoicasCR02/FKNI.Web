@model FKNI.Application.DTOs.PromocionesDTO

@{
    ViewData["Title"] = "Detalles de la Promoción";
}

<div class="container my-5">
    <h2 class="text-primary mb-4">Detalles de la Promoción</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">ID de Promoción</dt>
                <dd class="col-sm-8">@Model.IdPromocion</dd>

                <dt class="col-sm-4">Tipo de Promoción</dt>
                <dd class="col-sm-8">@Model.TipoPromocion</dd>

                @if (Model.IdProductoNavigation != null)
                {
                    <dt class="col-sm-4">Producto Asociado</dt>
                    <dd class="col-sm-8">@Model.IdProductoNavigation.NombreProducto</dd>
                }

                @if (Model.IdCategoriaNavigation != null)
                {
                    <dt class="col-sm-4">Categoría Asociada</dt>
                    <dd class="col-sm-8">@Model.IdCategoriaNavigation.NombreCategoria</dd>
                }

                <dt class="col-sm-4">Descuento</dt>
                <dd class="col-sm-8">@Model.Descuento %</dd>

                <dt class="col-sm-4">Fecha de Inicio</dt>
                <dd class="col-sm-8">@Model.FechaInicio?.ToString("d")</dd>

                <dt class="col-sm-4">Fecha de Fin</dt>
                <dd class="col-sm-8">@Model.FechaFin?.ToString("d")</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.IdPromocion" class="btn btn-outline-primary me-2">
            <i class="fas fa-pen"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Volver al listado
        </a>
    </div>
</div>
