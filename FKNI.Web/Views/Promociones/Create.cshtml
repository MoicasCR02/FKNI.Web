@section Scripts {
    <script>
        const tipoSelect = document.getElementById('TipoPromocion');
        const aplicaAContainer = document.getElementById('aplicaAContainer');
        const aplicaASelect = document.getElementById('AplicaA');
        const aplicaALabel = document.getElementById('aplicaA-label');

        const productos = @Html.Raw(Json.Serialize(ViewBag.ListProductos));
        const categorias = @Html.Raw(Json.Serialize(ViewBag.ListCategorias));

        tipoSelect.addEventListener('change', function () {
            const selected = this.value;
            aplicaASelect.innerHTML = '';
            aplicaAContainer.style.display = selected ? 'block' : 'none';

            if (selected === 'Producto') {
                aplicaALabel.textContent = 'Seleccione un producto';
                productos.forEach(p => {
                    const opt = document.createElement('option');
                    opt.value = p.IdProducto;
                    opt.text = p.NombreProducto;
                    aplicaASelect.appendChild(opt);
                });
            } else if (selected === 'Categoria') {
                aplicaALabel.textContent = 'Seleccione una categoría';
                categorias.forEach(c => {
                    const opt = document.createElement('option');
                    opt.value = c.IdCategoria;
                    opt.text = c.NombreCategoria;
                    aplicaASelect.appendChild(opt);
                });
            }
        });

        function validarPromocion() {
            let valido = true;

            const nombre = document.querySelector('[name="NombrePromocion"]');
            const tipo = document.querySelector('[name="TipoPromocion"]');
            const aplicaA = document.querySelector('[name="AplicaA"]');
            const descuento = document.querySelector('[name="Descuento"]');
            const inicio = document.querySelector('[name="FechaInicio"]');
            const fin = document.querySelector('[name="FechaFin"]');

            document.querySelectorAll('span.text-danger').forEach(span => span.textContent = '');

            const hoy = new Date().toISOString().split("T")[0];

            if (!nombre.value || nombre.value.length < 3) {
                document.getElementById('errorNombre').textContent = "Ingrese un nombre válido (mínimo 3 caracteres).";
                valido = false;
            }

            if (!tipo.value) {
                document.getElementById('errorTipo').textContent = "Seleccione un tipo de promoción.";
                valido = false;
            }

            if (!aplicaA.value) {
                document.getElementById('errorAplicaA').textContent = "Seleccione el producto o categoría correspondiente.";
                valido = false;
            }

            if (!descuento.value || descuento.value <= 0 || descuento.value > 100) {
                document.getElementById('errorDescuento').textContent = "Ingrese un porcentaje de descuento válido (1-100).";
                valido = false;
            }

            if (!inicio.value || inicio.value < hoy) {
                document.getElementById('errorInicio').textContent = "La fecha de inicio no puede ser anterior a hoy.";
                valido = false;
            }

            if (!fin.value || fin.value < inicio.value) {
                document.getElementById('errorFin').textContent = "La fecha de fin no puede ser anterior a la de inicio.";
                valido = false;
            }

            return valido;
        }
    </script>
}

